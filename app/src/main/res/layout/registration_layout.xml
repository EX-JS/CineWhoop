<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar">
        </include>

        <TextView
            android:id="@+id/toolbar_title"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"

            />

    </FrameLayout>

    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayoutRegisterration"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/back_user"
                android:layout_below="@+id/applogo"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/user_name_reg_icon"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/user_reg"
                    android:textSize="15dp"
                    android:textColor="@color/themeColordark"

                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:maxLength="15"
                        android:ems="15"
                        android:inputType="text"
                        android:id="@+id/firstNameReg"
                        android:hint="First Name"
                        android:singleLine="true"
                       android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@null"/>

                </android.support.design.widget.TextInputLayout>


                <View



                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    >

                </View>
                <android.support.design.widget.TextInputLayout

                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:maxLength="15"
                        android:ems="15"
                        android:inputType="text"
                        android:id="@+id/lastNameReg"
                        android:hint="Last Name"
                        android:layout_marginLeft="7dp"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@null"/>

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/back_user"
                android:layout_below="@+id/applogo"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/email_reg_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mail_icon"
                    android:textSize="15dp"
                    android:textColor="@color/themeColordark"

                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_gravity="center"
                  android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:maxLength="30"
                        android:ems="30"
                        android:id="@+id/emailReg"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@null"/>

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/back_user"
                android:layout_below="@+id/applogo"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/pass_reg_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/astrik_icon"
                    android:textSize="15dp"
                    android:textColor="@color/themeColordark"

                    />
                   <android.support.design.widget.TextInputLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:maxLength="26"
                        android:ems="26"
                        android:id="@+id/passwordReg"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@null"/>

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/back_user"
                android:layout_below="@+id/applogo"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/phone_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_icon"
                    android:textSize="15dp"
                    android:textColor="@color/themeColordark"

                    />
                <!--<View-->

                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:background="@color/black"-->
                    <!-->-->

                <!--</View>-->
                <android.support.design.widget.TextInputLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/phoneNumberReg"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:ems="10"
                        android:singleLine="true"
                        android:hint="Phone Number"
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@null"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <Button
                android:layout_gravity="center"
                android:typeface="serif"
                android:id="@+id/signUp"
                android:layout_marginTop="10dp"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:gravity="center"
                android:background="@drawable/book_curve"

                android:textColor="@color/white"


                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>